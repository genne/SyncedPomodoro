@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-controller="timer" ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ timeLeft | timer }}</title>
    @Styles.Render("~/Content/css")
